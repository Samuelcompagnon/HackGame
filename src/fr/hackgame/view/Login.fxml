<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="background" stylesheets="@style-login.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.hackgame.view.LoginController">
   <children>
      <Label layoutX="219.0" layoutY="237.0" stylesheets="@style-login.css" text="Utilisateur" textFill="WHITE" />
      <Label layoutX="184.0" layoutY="319.0" prefHeight="36.0" prefWidth="159.0" stylesheets="@style-login.css" text="Mot de passe" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="user_field" layoutX="357.0" layoutY="235.0" prefHeight="40.0" prefWidth="186.0" />
      <PasswordField fx:id="pass_field" layoutX="357.0" layoutY="314.0" prefHeight="40.0" prefWidth="186.0" />
      <Button layoutX="811.0" layoutY="537.0" mnemonicParsing="false" onAction="#handleCancel" text="Quitter" />
      <ButtonBar layoutX="280.0" layoutY="428.0" prefHeight="55.0" prefWidth="316.0">
        <buttons>
            <Button minWidth="43.0" mnemonicParsing="false" onAction="#handleValidate" prefHeight="55.0" prefWidth="121.0" text="Valider" textFill="#f4e7e7" />
          <Button minWidth="53.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="228.0" text="Nouveau" textFill="#f4e7e7" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>

